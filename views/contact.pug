extends base.pug

block scripts
  script(src='/static/index.js')

block style 
    style 
      include ../static/style.css
      include ../static/contact.css

block content 
    section#contactus
      h1 Contact Us
      form(action="/contact", method="post", class="myform")
        input(type="name" class="myinput" ,name="name", placeholder="Enter your Name:") 
        select.myinput(name='gender')
          option(value='No Selection' selected='') Enter your gender:
          option(value='Male') Male
          option(value='Female') Female
          option(value='others') others
        input(type="number" class="myinput" ,name="age", placeholder="Enter your Age:") 
        input(type="phone" class="myinput" ,name="phone", placeholder="Enter your Phone Number:") 
        input(type="email" class="myinput" ,name="email", placeholder="Enter your Email:") 
        input(type="address" class="myinput" ,name="address", placeholder="Enter your Address:") 
        select.myinput(name='choice')
          option(value='No Selection' selected='') Enter your Dance choice:
          option(value='Katthak') Katthak
          option(value='Kathakali') Kathakali
          option(value='Bharatnatyam') Bharatnatyam
          option(value='Western') Western
          option(value='Ballay') Ballay
          option(value='Odisi') Odisi
        button(class="btn")
            | Submit